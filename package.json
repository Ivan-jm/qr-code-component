{
  "name": "qr-code-component",
  "version": "1.0.0",
  "description": "QR component for the Frontend monitor QR component challenge",
  "homepage": "https://github.com/Ivan-jm/qr-code-component#readme",
  "bugs": {
    "url": "https://github.com/Ivan-jm/qr-code-component/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ivan-jm/qr-code-component.git"
  },
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "compile:sass": "sass -w --no-source-map sass/main.scss css/style.css",
    "prefix:css": "node_modules/.bin/postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "node_modules/.bin/sass css/style.prefix.css css/style.css --style=compressed",
    "build:css": "node_modules/.bin/npm-run-all compile:sass prefix:css compress:css"
  },
  "devDependencies": {
    "sass": "^1.87.0"
  }
}
